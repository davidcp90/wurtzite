{
 "compilerOptions": {
  "module": "commonjs",
  "esModuleInterop": true,
  "target": "es5",
  "noImplicitAny": true,
  "moduleResolution": "node",
  "emitDecoratorMetadata": true,
  "experimentalDecorators": true,
  "sourceMap": true,
  "outDir": "./dist",
  "allowSyntheticDefaultImports": true,
  "baseUrl": ".",
  "typeRoots": [
   "./@types",
   "./node_modules/@types"
  ],
  "lib": [
   "es2015"
  ]
 },
 "include": [
  "src/**/*",
  "bin/**/*",
  "database/**/*",
  "test/**/*"
 ],
 "exclude": [
    "**/node_modules/"
 ],
 "plugins": [
   {
    "name": "typescript-tslint-plugin"
   }
 ]
}